<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCF2"
    tools:context=".MenuFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Home Service Tersedia"
                android:textColorHint="#34346E"
                android:textSize="35sp"
                android:textStyle="bold"
                android:paddingTop="75dp"
                android:paddingStart="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCC"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewCleaning"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewCleaning"
                                app:layout_constraintStart_toStartOf="@+id/imageViewCleaning"
                                app:layout_constraintTop_toTopOf="@+id/imageViewCleaning"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewCleaning"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/cleaning" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewCleaning"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Cleaning"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewPlumber"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewPlumber"
                                app:layout_constraintStart_toStartOf="@+id/imageViewPlumber"
                                app:layout_constraintTop_toTopOf="@+id/imageViewPlumber"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewPlumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/plumber" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewPlumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plumber"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCE"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewElectrician"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewElectrician"
                                app:layout_constraintStart_toStartOf="@+id/imageViewElectrician"
                                app:layout_constraintTop_toTopOf="@+id/imageViewElectrician"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewElectrician"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/electrician" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewElectrician"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Electrician"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewTailor"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewTailor"
                                app:layout_constraintStart_toStartOf="@+id/imageViewTailor"
                                app:layout_constraintTop_toTopOf="@+id/imageViewTailor"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewTailor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/tailor" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewTailor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tailor"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCM"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewMaid"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewMaid"
                                app:layout_constraintStart_toStartOf="@+id/imageViewMaid"
                                app:layout_constraintTop_toTopOf="@+id/imageViewMaid"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewMaid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/maid" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewMaid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Maid"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCD"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewDriver"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewDriver"
                                app:layout_constraintStart_toStartOf="@+id/imageViewDriver"
                                app:layout_constraintTop_toTopOf="@+id/imageViewDriver"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewDriver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/driver" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewDriver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Driver"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCPainter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewPainter"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewPainter"
                                app:layout_constraintStart_toStartOf="@+id/imageViewPainter"
                                app:layout_constraintTop_toTopOf="@+id/imageViewPainter"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewPainter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.509"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.509"
                                app:srcCompat="@drawable/painter" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewPainter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Painter"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCCarpenter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewCarpenter"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewCarpenter"
                                app:layout_constraintStart_toStartOf="@+id/imageViewCarpenter"
                                app:layout_constraintTop_toTopOf="@+id/imageViewCarpenter"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewCarpenter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/carpenter" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewCarpenter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Carpenter"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/background_button_icon">

                            <ImageView
                                android:id="@+id/imageViewCG"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="@+id/imageViewGardener"
                                app:layout_constraintEnd_toEndOf="@+id/imageViewGardener"
                                app:layout_constraintStart_toStartOf="@+id/imageViewGardener"
                                app:layout_constraintTop_toTopOf="@+id/imageViewGardener"
                                app:layout_constraintVertical_bias="0.517"
                                app:srcCompat="@drawable/circle_green" />

                            <ImageView
                                android:id="@+id/imageViewGardener"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/gardener" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <TextView
                            android:id="@+id/textViewGardener"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gardener"
                            android:textAlignment="center"
                            android:textColor="#34346E"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>